<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/history_img1"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:src="@drawable/history" />

        <TextView
            android:justificationMode="inter_word"
            android:id="@+id/history_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/History_des_1" />

        <ImageView
            android:id="@+id/history_img2"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:src="@drawable/history_2" />

        <TextView
            android:justificationMode="inter_word"
            android:id="@+id/history_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/History_des_2"/>
    </LinearLayout>

</ScrollView>